<Window x:Class="Association_PAT_Ukrzaliznutsa.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Association_PAT_Ukrzaliznutsa.Login"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Name="Name" Grid.Row="0" Margin="122,30,30,30" />
        <PasswordBox Name="Pass" Grid.Row="1" Margin="122,30,30,30" />
        <Button Name="btnLogin" Content="Вход" Grid.Row="2" Margin="30" Click="BtnLogin_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="49,36,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Height="17" Width="68"/>
        <TextBlock HorizontalAlignment="Left" Margin="49,39,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top"/>
    </Grid>
</Window>
