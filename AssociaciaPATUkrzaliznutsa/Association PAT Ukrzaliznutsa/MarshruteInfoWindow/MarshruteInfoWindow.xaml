<Window x:Class="Association_PAT_Ukrzaliznutsa.MarshruteInfoWindow.MarshruteInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Association_PAT_Ukrzaliznutsa.MarshruteInfoWindow"
        mc:Ignorable="d"
        Title="MarshruteInfoWindow" Height="700" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="106*"/>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="214*"/>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="84*"/>
            <RowDefinition Height="84*"/>
            <RowDefinition Height="84*"/>
        </Grid.RowDefinitions>
        <TextBox Name="Number" Grid.Row="0" Margin="10"/>
        <TextBox Name="PointStart" Grid.Row="1" Margin="10"/>
        <TextBox Name="PointEnd" Grid.Row="2" Margin="10"/>
        <TextBox Name="StationArray" Grid.Row="3" Margin="10"/>
        <ComboBox Name="Train" Grid.Row="4" Margin="10"/>
        <TextBox Name="Cost" Grid.Row="5" Margin="10"/>
        <Button Name="btnSet" Content="Сохранить" Grid.Row="6" Margin="10" Click="BtnSet_Click"/>
        <TextBox Name="count" Grid.Row="12"/>
    </Grid>
</Window>
