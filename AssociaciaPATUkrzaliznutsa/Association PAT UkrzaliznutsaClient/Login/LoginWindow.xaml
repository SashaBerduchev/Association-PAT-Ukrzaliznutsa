<Window x:Class="Association_PAT_UkrzaliznutsaClient.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Association_PAT_UkrzaliznutsaClient.Login"
        mc:Ignorable="d"
        Title="LoginWindowClient" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Name="Name" Grid.Row="0" Margin="30" />
        <PasswordBox Name="Pass" Grid.Row="1" Margin="30" />
        <Button Name="btnLogin" Content="Вход" Grid.Row="2" Margin="30" Click="BtnLogin_Click"/>
    </Grid>
</Window>
