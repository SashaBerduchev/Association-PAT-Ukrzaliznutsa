<Window x:Class="Association_PAT_UkrzaliznutsaClient.Windows.AddProdactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Association_PAT_UkrzaliznutsaClient.Windows"
        mc:Ignorable="d"
        Title="AddProdactionWindow" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="ProdactionName" Grid.Row="0"  Margin="107,20,20,20"/>
        <TextBox Name="ProdactionCount" Grid.Row="1" Margin="107,20,20,20"/>
        <TextBox Name="ProdactionCost" Grid.Row="2"  Margin="107,20,20,20"/>
        <Button Name="Set" Grid.Row="4" Content="Сохрнаить" Margin="20" Click="Set_Click" />
        <TextBlock HorizontalAlignment="Left" Margin="20,33,0,0" TextWrapping="Wrap" Text="Название" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,33,0,0" TextWrapping="Wrap" Text="Колличество" VerticalAlignment="Top" Grid.Row="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,34,0,0" TextWrapping="Wrap" Text="Цена" VerticalAlignment="Top" Grid.Row="1"/>
    </Grid>
</Window>
